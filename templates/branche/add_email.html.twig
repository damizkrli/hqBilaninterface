{% extends 'base.html.twig' %}

{% block title %}Ajouter une adresse Email{% endblock %}

{% block body %}

    <div class="container mx-auto px-16 py-16">
        <div class="flex-wrap -mx-3 mb-6">
            <h2 class="text-3xl text-center mt-16 mb-16">Nouvelle Adresse Email</h2>
            {{ form_start(form) }}
            <div>
                <div class="flex items-center justify-center px-3 mb-5 mt-5">
                    {{ form_widget(form.mail) }}
                </div>
                <div class="text-center text-red-500">
                    {% if not form.vars.valid %}
                        <div class="flex items-center justify-center">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2" fill="none" viewBox="0 0 24 24"
                                 stroke="currentColor" stroke-width="2">
                                <path stroke-linecap="round" stroke-linejoin="round"
                                      d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                            {{ form_errors(form) }}
                        </div>
                    {% endif %}
                </div>
            </div>

        </div>
    </div>

    <div class="flex items-center justify-center">
        <button type="submit" value="Enregistrer"
                class="button py-2 px-4 mr-4">
            AJOUTER
        </button>
        {{ form_end(form) }}

        <button type="button" value="Retour"
                class="button py-2 px-4">
            <a href="{{ path('delete_email', {'id': branche.idBranche}) }}">Retour</a>
        </button>
    </div>

{% endblock %}
